{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "custom/word-list",
  "title": "Word List Block",
  "category": "widgets",
  "icon": "editor-ul",
  "description": "A custom Gutenberg block for creating word lists.",
  "keywords": ["word", "list", "dictionary", "glossary"],
  "version": "1.0.0",
  "textdomain": "word-list-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "attributes": {
    "letter": {
      "type": "string",
      "default": ""
    },
    "words": {
      "type": "array",
      "default": []
    }
  },
  "supports": {
    "align": true,
    "customClassName": true
  }
}
